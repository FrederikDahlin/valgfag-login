<% extend('../partials/login_template') %>

<p>Please enter a new password for your account.</p>

<form action="/select-password" method="POST">
    <label class="control-label" for="select_password">New password</label>
    <input required id="select_password" class="form-control" type="password" name="user_password" placeholder="Your new password">
    
    <label class="control-label" for="select_password_confirm">Confirm password</label>
    <input required id="select_password_confirm " class="form-control" type="password" name="user_password" placeholder="Confirm new password">

    <button class="btn btn-success" type="submit">Change password</button>
</form>