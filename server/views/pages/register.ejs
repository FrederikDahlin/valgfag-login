<% extend('../partials/template') %>

<article>
    <form method="POST" style="width: 300px">
        <input class="user_mail form-control" type="email" name="user_mail" placeholder="E-mail">
        <input class="user_password form-control" type="password" name="user_password" placeholder="Password">
        <input class="user_firstname form-control" type="text" name="user_firstname" placeholder="First name">
        <input class="user_lastname form-control" type="text" name="user_lastname" placeholder="Last name">
        <button type="submit">Create account</button>
    </form>

</article>